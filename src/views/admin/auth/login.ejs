<div class="bg-teal-800 p-8 rounded-lg shadow-lg w-full max-w-md">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
        <img src="/path/to/logo.png" alt="Logo" class="w-40 h-auto">
    </div>
    <!-- Title -->
    <h1 class="text-center text-2xl font-bold text-white mb-8 leading-relaxed">
        SISTEM INFORMASI PENCATATAN<br> DUTA UTAMA GRAFIKA
    </h1>
    <!-- Form -->
    <form action="/auth/login" method="POST">
        <!-- Email Input -->
        <div class="mb-4">
            <input type="email" id="password" name="email" placeholder="Silahkan masukkan email..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" required>
        </div>
        <!-- Password Input -->
        <div class="mb-6">
            <input type="password" autocomplete="on" id="password" name="password" placeholder="Silahkan masukkan password..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" required>
        </div>
        <% if (messages.error) { %>
                  <div class="text-xs mt-1 text-rose-500"><%= messages.error %></div>
              <% } %>
        <!-- Login Button -->
        <div class="flex justify-center">
            <button type="submit" class="bg-white text-teal-900 font-bold py-2 px-6 rounded-md hover:bg-gray-200">
                Login
            </button>
        </div>
    </form>
</div>
