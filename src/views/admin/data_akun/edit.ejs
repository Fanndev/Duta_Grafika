<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Edit Data Akun</h2>
    <form id="formUbahAkun" action="/data_akun/<%= data.data_id %>" method="post">
        <div>
            <input type="hidden" name="data_id" value="<%= data.data_id %>">
        </div>
        <div class="grid grid-cols-3 gap-4 mb-4">
          <label for="kode" class="col-span-1">Kode :</label>
          <input
            type="text"
            id="kode"
            value="<%= data.kode %>"
            name="kode"
            class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
          />
        </div>
  
        <div class="grid grid-cols-3 gap-4 mb-4">
          <label for="debit" class="col-span-1">Debit :</label>
          <input
            type="text"
            id="debit"
            value="<%= data.debit %>"
            name="debit"
            class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
          />
        </div>
  
        <div class="grid grid-cols-3 gap-4 mb-4">
          <label for="kredit" class="col-span-1">Kredit :</label>
          <input
            type="text"
            id="kredit"
            value="<%= data.kredit %>"
            name="kredit"
            class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
          />
        </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="keterangan" class="col-span-1">Keterangan :</label>
        <input
          type="text"
          id="keterangan"
          value="<%= data.keterangan %>"
          name="keterangan"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>


      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
          href="/data_akun"
        >
          Batal
        </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById('formUbahAkun').addEventListener('submit', function(event) {
    event.preventDefault(); // Mencegah form langsung submit

    Swal.fire({
      title: 'Konfirmasi',
      text: "Apakah kamu yakin ingin mengubah data akun ini?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Ya, ubah!',
      cancelButtonText: 'Batal',
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33'
    }).then((result) => {
      if (result.isConfirmed) {
        // Jika dikonfirmasi, lanjutkan submit form
        this.submit();
      }
    });
  });
</script>
