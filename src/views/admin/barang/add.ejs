<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Tambah Data Customer</h2>
    <form id="formTambahBarang" action="/barang" method="post">
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="kode" class="col-span-1">Id Customer :</label>
        <input
          type="text"
          id="kode"
          name="kode"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="nama_barang" class="col-span-1">Nama Barang :</label>
        <input
          type="text"
          id="nama_barang"
          name="nama_barang"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="Stok" class="col-span-1">Stok :</label>
        <input
          type="text"
          id="stok"
          name="stok"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="harga_beli" class="col-span-1">Harga Beli :</label>
        <input
          type="text"
          id="harga_beli"
          name="harga_beli"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="harga_beli" class="col-span-1">Harga Jual :</label>
        <input
          type="text"
          id="harga_jual"
          name="harga_jual"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="keterangan" class="col-span-1">Keterangan :</label>
        <input
          type="text"
          id="keterangan"
          name="keterangan"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>


      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
          href="/barang"
        >
          Batal
        </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById('formTambahBarang').addEventListener('submit', function(event) {
    event.preventDefault(); // Mencegah form langsung submit

    Swal.fire({
      title: 'Konfirmasi',
      text: "Apakah kamu yakin ingin menambahkan barang ini?",
      icon: 'question',
      showCancelButton: true,
      confirmButtonText: 'Ya, tambahkan!',
      cancelButtonText: 'Batal',
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33'
    }).then((result) => {
      if (result.isConfirmed) {
        // Jika dikonfirmasi, lanjutkan submit form
        this.submit();
      }
    });
  });
</script>
