<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Ubah Data Operasional</h2>
    <form>
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="idPegawai" class="col-span-1">Id Operasional :</label>
        <input
          type="text"
          id="idPegawai"
          name="idPegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="namaPegawai" class="col-span-1">Nama Operasional :</label>
        <input
          type="text"
          id="namaPegawai"
          name="namaPegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="teleponPegawai" class="col-span-1">Tgl Transaksi :</label>
        <input
          type="text"
          id="teleponPegawai"
          name="teleponPegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="alamatPegawai" class="col-span-1">Jummlah Debet :</label>
        <input
          type="text"
          id="alamatPegawai"
          name="alamatPegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="alamatPegawai" class="col-span-1">Harga Kredit :</label>
        <input
          type="text"
          id="alamatPegawai"
          name="alamatPegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="alamatPegawai" class="col-span-1">Pegawai :</label>
        <input
          type="text"
          id="alamatPegawai"
          name="alamatPegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
          href="/operasional"
        >
          Batal
        </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>
