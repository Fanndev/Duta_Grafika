<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Tambah Data Operasional</h2>
    <form id="formTambahoperasional" action="/operasional" method="post">
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="kode" class="col-span-1">Id Operasional :</label>
        <input
          type="text"
          id="kode"
          name="kode"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="nama_oper" class="col-span-1">Nama Operasional :</label>
        <input
          type="text"
          id="nama_oper"
          name="nama_oper"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="tgl_transaksi" class="col-span-1">Tgl Transaksi :</label>
        <input
          type="text"
          id="tgl_transaksi"
          name="tgl_transaksi"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="debet" class="col-span-1">Jumlah Debet :</label>
        <input
          type="text"
          id="debet"
          name="debet"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="kredit" class="col-span-1">Harga Kredit :</label>
        <input
          type="text"
          id="kredit"
          name="kredit"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="nama_pegawai" class="col-span-1">nama pegawai :</label>
        <input
          type="text"
          id="nama_pegawai"
          name="nama_pegawai"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
          href="/operasional"
        >
          Batal
        </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById('formTambahoperasional').addEventListener('submit', function(event) {
    event.preventDefault(); // Mencegah form langsung submit

    Swal.fire({
      title: 'Konfirmasi',
      text: "Apakah kamu yakin ingin menambahkan operasional ini?",
      icon: 'question',
      showCancelButton: true,
      confirmButtonText: 'Ya, tambahkan!',
      cancelButtonText: 'Batal',
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33'
    }).then((result) => {
      if (result.isConfirmed) {
        // Jika dikonfirmasi, lanjutkan submit form
        this.submit();
      }
    });
  });
</script>