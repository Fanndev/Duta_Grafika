<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Tambah Data Transaksi</h2>
    <form id="formTambahtransaksi" action="/transaksi" method="post">
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="kode" class="col-span-1">Id Pembeli :</label>
        <input
          type="text"
          id="kode"
          name="kode"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="nama_barang" class="col-span-1">Nama Barang :</label>
        <input
          type="text"
          id="nama_barang"
          name="nama_barang"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="tgl_pembelian" class="col-span-1">Tgl Pembeli :</label>
        <input
          type="text"
          id="tgl_pembelian"
          name="tgl_pembelian"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="total_order" class="col-span-1">Total Order :</label>
        <input
          type="text"
          id="total_order"
          name="total_order"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="harga_barang" class="col-span-1">Harga Barang :</label>
        <input
          type="text"
          id="harga_barang"
          name="harga_barang"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="is_aktif" class="col-span-1">Status :</label>
        <select
          id="is_aktif"
          name="is_aktif"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        >
          <option value="true">Aktif</option>
          <option value="false">Nonaktif</option>
        </select>
      </div>

      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
          href="/transaksi"
        >
          Batal
        </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  document
    .getElementById("formTambahtransaksi")
    .addEventListener("submit", function (event) {
      event.preventDefault(); // Mencegah form langsung submit

      Swal.fire({
        title: "Konfirmasi",
        text: "Apakah kamu yakin ingin menambahkan transaksi ini?",
        icon: "question",
        showCancelButton: true,
        confirmButtonText: "Ya, tambahkan!",
        cancelButtonText: "Batal",
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
      }).then((result) => {
        if (result.isConfirmed) {
          // Jika dikonfirmasi, lanjutkan submit form
          this.submit();
        }
      });
    });
</script>
