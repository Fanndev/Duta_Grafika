<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Edit Data Supplier</h2>
    <form id="formUbahsupplier" action="/supplier/<%= data.supplier_id %>" method="post">
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="kode" class="col-span-1">Id supplier :</label>
        <input
          type="text"
          id="kode"
          value="<%= data.kode %>"
          name="kode"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="nama" class="col-span-1">Nama Supplier :</label>
        <input
          type="text"
          id="nama"
           value="<%= data.nama %>"
          name="nama"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="telepon" class="col-span-1">Telepon :</label>
        <input
          type="text"
          id="telepon"
           value="<%= data.telepon %>"
          name="telepon"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="alamat" class="col-span-1">Alamat :</label>
        <input
          type="text"
          id="alamat"
           value="<%= data.alamat %>"
          name="alamat"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="is_aktif" class="col-span-1">Status :</label>
        <select
          id="is_aktif"
           value="<%= data.is_aktif %>"
          name="is_aktif"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        >
          <option value="true">Aktif</option>
          <option value="false">Nonaktif</option>
        </select>
      </div>

      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          href="/supplier"
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
        >
          Batal
      </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById('formUbahsupplier').addEventListener('submit', function(event) {
    event.preventDefault(); // Mencegah form langsung submit

    Swal.fire({
      title: 'Konfirmasi',
      text: "Apakah kamu yakin ingin mengubah data supplier ini?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Ya, ubah!',
      cancelButtonText: 'Batal',
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33'
    }).then((result) => {
      if (result.isConfirmed) {
        // Jika dikonfirmasi, lanjutkan submit form
        this.submit();
      }
    });
  });
</script>