<div class="p-6">
  <!-- Form Tambah Data (Now visible by default) -->
  <div
    id="formTambahData"
    class="bg-teal-600 p-6 rounded-lg shadow-lg max-w mx-auto text-white"
  >
    <h2 class="text-lg font-semibold mb-6 text-center">Tambah Data Orderan</h2>
    <form id="formUbahorder" action="/order/<%= data.orderan_id %>" method="post">
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="kode" class="col-span-1">Id Orderan :</label>
        <input
          type="text"
          id="kode"
          value="<%= data.kode %>"
          name="kode"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="tgl_terima" class="col-span-1">tanggal Terima :</label>
        <input
          type="text"
          id="tgl_terima"
          value="<%= data.tgl_terima %>"
          name="tgl_terima"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="tgl_ambil" class="col-span-1">Tanggal ambil :</label>
        <input
          type="text"
          id="tgl_ambil"
          value="<%= data.tgl_ambil %>"
          name="tgl_ambil"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="nama_pesanan" class="col-span-1">Nama Pesanan :</label>
        <input
          type="text"
          id="nama_pesanan"
          value="<%= data.nama_pesanan %>"
          name="nama_pesanan"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="qty" class="col-span-1">Qty :</label>
        <input
          type="text"
          id="qty"
          value="<%= data.qty %>"
          name="qty"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="jenis_pesanan" class="col-span-1">jenis_pesanan :</label>
        <input
          type="text"
          id="jenis_pesanan"
          value="<%= data.jenis_pesanan %>"
          name="jenis_pesanan"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>
      <div class="grid grid-cols-3 gap-4 mb-4">
        <label for="keterangan" class="col-span-1">keterangan :</label>
        <input
          type="text"
          id="keterangan"
          value="<%= data.keterangan %>"
          name="keterangan"
          class="col-span-2 bg-teal-500 px-4 py-2 rounded-md text-black focus:outline-none"
        />
      </div>

      <!-- Tombol Aksi -->
      <div class="flex justify-between mt-6">
        <a
          type="button"
          id="batalBtn"
          class="bg-white text-black px-6 py-2 rounded-full"
          href="/order"
        >
          Batal
        </a>
        <button
          type="submit"
          class="bg-black text-black-600 px-6 py-2 rounded-full"
        >
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById('formUbahorder').addEventListener('submit', function(event) {
    event.preventDefault(); // Mencegah form langsung submit

    Swal.fire({
      title: 'Konfirmasi',
      text: "Apakah kamu yakin ingin mengubah data order ini?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Ya, ubah!',
      cancelButtonText: 'Batal',
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33'
    }).then((result) => {
      if (result.isConfirmed) {
        // Jika dikonfirmasi, lanjutkan submit form
        this.submit();
      }
    });
  });
</script>